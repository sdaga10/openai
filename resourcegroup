

#Define Variables
variable "location" {
  type    = string
  default = "westus2"
}

variable "name" {
  type    = string
  default = "example-resource-group"
}

#Check for existing resource group
data "azurerm_resource_group" "example" {
  name     = var.name
  location = var.location
}

# Provision Resource Group
resource "azurerm_resource_group" "example" {
  name     = var.name
  location = var.location

  tags = {
    Environment = "staging"
  }
}
